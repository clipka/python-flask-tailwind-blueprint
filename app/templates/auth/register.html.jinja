{% extends "base.html.jinja" %}
{% include "navbar.html.jinja" %}
{% block content %}
<section class="h-screen">
  <div class="px-2 h-full text-gray-800">
    <div class="flex xl:justify-center justify-center items-center flex-wrap h-full">
      <div class="xl:ml-20 mb-12 md:mb-0 w-3/4 sm:w-1/3">
        <form action="" method="post">
            {{ form.hidden_tag() }}
            <div class="mb-3">
                {{ form.username.label(class="label") }}<br>
                {{ form.username(class_="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none") }}<br>
                {% for error in form.username.errors %}
                <span class="text-orange-700">[{{ error }}]</span>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form.email.label(class="label") }}<br>
                {{ form.email(class_="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none") }}<br>
                {% for error in form.email.errors %}
                <span class="text-orange-700">[{{ error }}]</span>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form.password.label(class="label") }}<br>
                {{ form.password(class_="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none") }}<br>
                {% for error in form.password.errors %}
                <span class="text-orange-700">[{{ error }}]</span>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form.password2.label(class="label") }}<br>
                {{ form.password2(class_="form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none") }}<br>
                {% for error in form.password2.errors %}
                <span class="text-orange-700">[{{ error }}]</span>
                {% endfor %}
            </div>
            <div class="text-center lg:text-left">
                {{ form.submit(class_="px-7 py-3 bg-zinc-700 text-white font-medium text-sm leading-snug uppercase rounded shadow-md btn-login") }}
            </div>
        </form>
        <div class="registered">
            <span>Already registered?</span>
            <a href="{{ url_for('auth.login') }}"><i class="fa fa-hand-o-right" aria-hidden="true"></i>Login</a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock  %}